{
  "name": "ve-calendar-vue3",
  "version": "1.0.0",
  "description": "Vue 3 日历组件，支持农历、节气、多选等功能",
  "type": "module",
  "main": "dist/ve-calendar.umd.cjs",
  "module": "dist/ve-calendar.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ve-calendar.js",
      "require": "./dist/ve-calendar.umd.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:lib": "vite build --mode lib",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit"
  },
  "keywords": [
    "vue3",
    "calendar",
    "lunar",
    "农历",
    "日历",
    "ve-calendar"
  ],
  "author": {
    "name": "Xiao",
    "email": "xpwsgg@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpwsgg/ve-calendar-vue3.git"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vueuse/core": "^10.7.0",
    "typescript": "~5.6.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vue": "^3.4.0",
    "vue-tsc": "^2.1.0"
  }
}
